<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include("partials/head") %>
    <link rel="stylesheet" href="/css/cart.css" />
  </head>

  <body>
    <%- include("partials/navbar") %> <%- include('partials/sidebar') %>

    <section class="cart-container">
      <h2>Your Cart</h2>
      <div id="cart-items"></div>
      <div class="cart-total">
        <strong>Total:</strong> $<span id="grand-total">0.00</span>
      </div>
      <button id="checkout-btn">Checkout</button>
      <div
        id="checkout-confirmation"
        style="display: none; margin-top: 1rem"
      ></div>
    </section>

    <!-- Modal -->
    <div id="checkout-modal" class="modal">
      <div class="modal-content">
        <h3>Complete Your Payment</h3>
        <p>Send the payment to this account:</p>
        <p><strong>Bank Account:</strong> 1234567890 - Your Bank Name</p>
        <p>Use the following code as payment description:</p>
        <p><strong id="payment-code"></strong></p>
        <button id="confirm-payment-btn">I have paid</button>
        <button id="close-modal-btn">Cancel</button>
      </div>
    </div>

    <%- include('partials/footer') %>

    <script src="/js/cart-local.js"></script>
    <script src="/js/cart-page.js"></script>

  </body>
</html>

